<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="FullscreenTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>


    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_style</item>
        <item name="cornerRadius">@dimen/size_8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:height">@dimen/size_48dp</item>
    </style>
    <style name="WhiteButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/white_corner_background</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:height">@dimen/size_58dp</item>
        <item name="android:drawableRight">@drawable/ic_green_arrow</item>
        <item name="android:paddingStart">@dimen/size_30dp</item>
        <item name="android:paddingEnd">@dimen/size_10dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="boxStrokeWidth">@dimen/size_2dp</item>
    </style>


    <dimen name="size_48dp">48dp</dimen>
    <dimen name="size_58dp">58dp</dimen>
</resources>
